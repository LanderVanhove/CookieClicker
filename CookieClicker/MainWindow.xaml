<Window x:Class="CookieClicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookieClicker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Source="eurobg.png" Stretch="UniformToFill" Opacity="0.2" Grid.ColumnSpan="3" Grid.RowSpan="3"/>

        <StackPanel>
        <Label Content="Lander's Vault"/>
            <WrapPanel>
                <Label Content="Money Counter: " />
                <Label Name="LblMoneyCounter" Content="€ 0,00"/>
            </WrapPanel>
        </StackPanel>
        <Image Name="ImgEuro" Source="euro.png" Grid.Row="1" Width="120"
               MouseLeftButtonDown="Image_MouseLeftButtonDown" MouseLeftButtonUp="ImgEuro_MouseLeftButtonUp" MouseLeave="ImgEuro_MouseLeave" MouseEnter="ImgEuro_MouseEnter"/>


    </Grid>
</Window>
